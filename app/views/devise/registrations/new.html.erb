<nav class="navbar">
  <div class="navbar__brand"><%= link_to "Blending", root_path %></div>
</nav>

<div class="container">
  <!-- <h2>Sign up</h2> -->

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "form" }) do |f| %>
    <% if resource.errors.present? %>
      <%= debug resource.errors.full_messages %>
    <% end %>

    <%= f.hidden_field :native, value: params[:native] %>

    <div class="form__field">
      <%= f.label :name, "What would you like to call your family?", class: "form__label" %>
      <div class="form__hint">(it could be an interest, e.g. the outdoors family)</div>
      <%= f.text_field :name, class: "form__input" %>
    </div>

    <div class="form__field">
      <%= f.label :location_id, "Where do you live at the moment?", class: "form__label" %>
      <%= f.collection_select :location_id, Location.all, :id, :name, {}, class: "select-box" %>
    </div>

    <div class="form__field">
      <%= f.label :email, "Choose an email for the account", class: "form__label" %>
      <%= f.email_field :email, class: "form__input" %>
    </div>

    <div class="form__field">
      <%= f.label :password, "Choose a password for the account", class: "form__label" %>
      <%= f.password_field :password, autocomplete: "off", class: "form__input" %>
    </div>

    <div class="form__field">
      <%= f.label :password_confirmation, "Type the password again", class: "form__label" %>
      <div class="form__hint">(to make sure you typed it correctly)</div>
      <%= f.password_field :password_confirmation, autocomplete: "off", class: "form__input" %>
    </div>

    <%= f.submit "Sign up", class: "button button--block" %>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
