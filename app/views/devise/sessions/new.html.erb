<div class="ui horizontal divider">
  Sign in
</div>

<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "ui large form" }) do |f| %>
  <div class="field">
    <%= f.label :email %>
    <div class="ui input">
      <%= f.email_field :email, autofocus: true %>
    </div>
  </div>
  <div class="field">
    <%= f.label :password %>
    <div class="ui input">
      <%= f.password_field :password, autocomplete: "off" %>
    </div>
  </div>
  <div class="field">
    <div class="ui checkbox">
      <%= f.check_box :remember_me, class: "hidden" %>
      <%= f.label :remember_me %>
    </div>
  </div>
  <%= f.submit "Sign in", class: "fluid ui large teal button" %>
<% end %>

