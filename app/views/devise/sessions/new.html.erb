<nav class="navbar">
  <div class="navbar__brand"><%= link_to "Blending", root_path %></div>
</nav>

<div class="container">
  <!-- <h2>Log in</h2> -->

  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "form" }) do |f| %>
    <div class="form__field">
      <%= f.label :email, class: "form__label" %>
      <%= f.email_field :email, autofocus: true, class: "form__input" %>
    </div>

    <div class="form__field">
      <%= f.label :password, class: "form__label" %>
      <%= f.password_field :password, autocomplete: "off", class: "form__input" %>
    </div>

    <!--
    <% if devise_mapping.rememberable? -%>
      <div class="form__field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end -%>
    -->

    <%= f.submit "Log in", class: "button button--block" %>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
