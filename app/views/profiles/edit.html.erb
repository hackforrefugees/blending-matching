<div class="container">
  <%= form_for(@profile, url: "/profile", html: { class: "form" }) do |f| %>
    <% if @profile.errors.present? %>
      <%= debug @profile.errors.full_messages %>
    <% end %>

    <div class="form__field">
      <%= f.label :name, "What you call your family", class: "form__label" %>
      <%= f.text_field :name, class: "form__input" %>
    </div>

    <div class="form__field">
      <%= f.label :picture %>
      <%= image_tag @profile.picture, class: "form__field__image" %>
      <%= f.file_field :picture %>
    </div>

    <div class="form__field">
      <%= f.label :location_id, "Where you currently live", class: "form__label" %>
      <%= f.collection_select :location_id, Location.all, :id, :name, {}, class: "select-box" %>
    </div>

    <div class="form__field">
      <%= f.label :tag_list, "Write some of your family's interests", class: "form__label" %>
      <div class="form__hint">(e.g. fika, hiking, sports, food, movies)</div>
      <%= f.text_field :tag_list, class: "tag-box" %>
    </div>

    <div class="form__field">
      <%= f.label :description, "Write a short description of your family", class: "form__label" %>
      <div class="form__hint">(e.g. family members, where you're from)</div>
      <%= f.text_area :description, class: "form__input form__input--textarea" %>
    </div>

    <%= f.submit "Update", class: "button button--block" %>
  <% end %>
</div>
