<div class="profiles">

  <% if current_profile.friends.present? %>
    <div class="profiles__header">
      Your befriended families
    </div>
    <% current_profile.friends.each do |friend| %>
      <%= render friend %>
    <% end %>
  <% end %>

  <% if current_profile.requested_friends.present? %>
    <div class="profiles__header">
      Friend requests
    </div>
    <% current_profile.requested_friends.each do |friend| %>
      <%= render friend %>
    <% end %>
  <% end %>

  <div class="profiles__header">
    Families
  </div>

  <% @profiles.each do |profile| %>
    <%= render profile %>
  <% end %>

  <div class="profiles__search">
    <div class="container">
      <%= form_tag(search_profiles_path, method: "get") do %>
        <div class="form__field" >
          <%= label_tag :q, "Find families with these interests:", class: "form__label" %>
          <%= text_field_tag :q, nil, class: "form__input profiles__search__search-field", class: "tag-box" %>
          <%= submit_tag "Filter", class:"button" %>
          <%= link_to "Clear", profiles_path, class: "button"%>
        </div>
      <% end %>
    </div>
  </div>
</div>
