<!DOCTYPE html>
<html>
<head>
  <title>Blending</title>
  <%= stylesheet_link_tag "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
  <meta name="viewport" content="width=device-width, initial-scale=1">
</head>
<body>
  <% if signed_in? %>
    <nav class="navbar">
      <%= link_to image_tag("blender.svg"), profiles_path, class: "#{current_page(profiles_path)} navbar__item" %>
      <%= link_to image_tag("family.svg"), profile_path(current_profile), class: "#{current_page(profile_path(current_profile))} navbar__item" %>
      <%= link_to image_tag("chat.svg"), "#", class: "navbar__item" %>
      <%= link_to image_tag("settings.svg"), edit_profile_registration_path(current_profile), class: "#{current_page(edit_profile_registration_path(current_profile))} navbar__item" %>
    </nav>
  <% end %>

  <% if notice.present? %>
    <p class="notice">
      <%= notice %>
    </p>
  <% end %>
  <% if alert.present? %>
    <p class="alert">
      <%= alert %>
    </p>
  <% end %>

  <%= yield %>
</body>
</html>
